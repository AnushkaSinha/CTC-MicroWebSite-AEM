<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="{Long}0"
    height="{Long}400"
    helpPath="en/cq/current/wcm/default_components.html#Forms Dropdown List"
    width="{Long}650"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <first
            jcr:primaryType="nt:unstructured"
            title="Title and Text"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <addressLine1
                    jcr:primaryType="cq:Widget"
                    defaultValue="{Boolean}true"
                    fieldLabel="Address Line 1"
                    inputValue="false"
                    name="./addressLine1"
                    type="checkbox"
                    xtype="selection"/>
                <addressLine2
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Address Line 2"
                    inputValue="true"
                    name="./addressLine2"
                    type="checkbox"
                    xtype="selection"/>
                <addressLine3
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Address Line 3"
                    inputValue="true"
                    name="./addressLine3"
                    type="checkbox"
                    xtype="selection"/>
                <addressPOBox
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Address PO Box"
                    inputValue="true"
                    name="./addressPOBox"
                    type="checkbox"
                    xtype="selection"/>
                <addressCity
                    jcr:primaryType="cq:Widget"
                    defaultValue="{Boolean}true"
                    fieldLabel="Address City"
                    inputValue="false"
                    name="./addressCity"
                    type="checkbox"
                    xtype="selection"/>
                <addresspostcode
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Address Post Code"
                    inputValue="true"
                    name="./addresspostcode"
                    type="checkbox"
                    xtype="selection"/>
                <addressState
                    jcr:primaryType="cq:Widget"
                    defaultValue="{Boolean}true"
                    fieldLabel="Address State"
                    inputValue="false"
                    name="./addressState"
                    type="checkbox"
                    xtype="selection"/>
                <addressCountry
                    jcr:primaryType="cq:Widget"
                    defaultValue="{Boolean}true"
                    fieldLabel="Address Country"
                    inputValue="false"
                    name="./addressCountry"
                    type="checkbox"
                    xtype="selection"/>
                <selectList
                    jcr:primaryType="cq:Widget"
                    defaultValue="personal"
                    fieldLabel="Address Class"
                    name="./AddressClass"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <one
                            jcr:primaryType="nt:unstructured"
                            text="Personal"
                            value="personal"/>
                        <two
                            jcr:primaryType="nt:unstructured"
                            text="Business"
                            value="business"/>
                    </options>
                </selectList>
                <selectList2
                    jcr:primaryType="cq:Widget"
                    defaultValue="Shipping"
                    fieldLabel="Address Type"
                    name="./AddressType"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <one
                            jcr:primaryType="nt:unstructured"
                            text="Shipping"
                            value="Shipping"/>
                        <two
                            jcr:primaryType="nt:unstructured"
                            text="Billing"
                            value="Billing"/>
                    </options>
                </selectList2>
            </items>
        </first>
    </items>
</jcr:root>

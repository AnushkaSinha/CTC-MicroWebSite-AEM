<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="{Long}0"
    height="{Long}400"
    helpPath="en/cq/current/wcm/default_components.html#Forms Text Field"
    width="{Long}650"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <first
            jcr:primaryType="nt:unstructured"
            title="Title and Text"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    defaultValue="Content Download"
                    fieldLabel="Title"
                    name="./jcr:title"
                    xtype="textfield"/>
                <url
                    jcr:primaryType="cq:Widget"
                    fieldLabel="URL"
                    name="./jcr:url"
                    xtype="pathfield"/>
                <downloadLabel
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Download Label"
                    name="./jcr:downloadLabel"
                    xtype="textfield"/>
                <contentDownload
                    jcr:primaryType="cq:Widget"
                    collapsed="{Boolean}false"
                    collapsible="{Boolean}false"
                    xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <contentDownload
                            jcr:primaryType="cq:Widget"
                            defaultValue="Yes"
                            fieldLabel="Content Download"
                            name="./contentDownload"
                            type="select"
                            xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <one
                                    jcr:primaryType="nt:unstructured"
                                    text="Yes"
                                    value="CD_YES"/>
                                <two
                                    jcr:primaryType="nt:unstructured"
                                    text="No"
                                    value="CD_NO"/>
                            </options>
                        </contentDownload>
                        <elementId2
                            jcr:primaryType="cq:Widget"
                            defaultValue="ContentDownload"
                            fieldLabel="Element Id"
                            name="./jcr:element1"
                            readOnly="{Boolean}true"
                            xtype="textfield"/>
                    </items>
                </contentDownload>
                <contentType
                    jcr:primaryType="cq:Widget"
                    collapsed="{Boolean}false"
                    collapsible="{Boolean}false"
                    xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <contentType
                            jcr:primaryType="cq:Widget"
                            defaultValue="Brochure"
                            fieldLabel="Content Type"
                            name="./contentType"
                            type="select"
                            xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <one
                                    jcr:primaryType="nt:unstructured"
                                    text="Brochure"
                                    value="CT_BRCHR"/>
                                <two
                                    jcr:primaryType="nt:unstructured"
                                    text="Show Report"
                                    value="CT_SHOWREP"/>
                            </options>
                        </contentType>
                        <elementId
                            jcr:primaryType="cq:Widget"
                            defaultValue="ContentType"
                            fieldLabel="Element Id"
                            name="./jcr:element2"
                            readOnly="{Boolean}true"
                            xtype="textfield"/>
                    </items>
                </contentType>
                <downloadImage
                    jcr:primaryType="cq:Widget"
                    collapsed="{Boolean}false"
                    collapsible="{Boolean}false"
                    xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <title
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Logo Alternate Text"
                            name="./downloadAltText"
                            xtype="textfield"/>
                        <url
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Logo Path"
                            name="./downloadImage"
                            xtype="pathfield"/>
                    </items>
                </downloadImage>
            </items>
        </first>
    </items>
</jcr:root>

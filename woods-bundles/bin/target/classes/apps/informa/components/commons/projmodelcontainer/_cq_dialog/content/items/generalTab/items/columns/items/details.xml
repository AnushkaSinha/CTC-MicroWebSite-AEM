<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Widget"
    sling:resourceType="/libs/granite/ui/components/foundation/form/multifield"
    aem-composit-multifield=""
    class="full-width"
    eaem-nested=""
    fieldDescription="Click 'Add field' to add"
    fieldLabel="Add properties"
    name="./multi">
    <field
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/form/fieldset"
        eaem-nested=""
        name="./multi">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resouceType="granite/ui/components/foundation/layouts/fixedcolumns"
            method="absolute"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <property
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldDescription="Use 'fieldOne,fieldTwo,fieldThree' for property name that are to be used for filtering"
                        fieldLabel="Property"
                        name="./property"/>
                    <displayName
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldDescription="Property Display name."
                        fieldLabel="Display name"
                        name="./displayName"/>
                    <values
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textarea"
                        fieldDescription="Provide the values with comma(,) separated"
                        fieldLabel="Value"
                        name="./values"/>
                </items>
            </column>
        </items>
    </field>
</jcr:root>

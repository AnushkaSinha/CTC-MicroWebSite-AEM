<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Social Links"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <general
                jcr:primaryType="nt:unstructured"
                jcr:title="Social Links"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <multi
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                aem-composit-multifield=""
                                class="full-width"
                                eaem-nested=""
                                fieldDescription="Click 'Add field' to links"
                                fieldLabel="Links details"
                                name="./multi">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    eaem-nested=""
                                    name="./multi">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <type
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    fieldDescription="Select type of the social link"
                                                    fieldLabel="Type"
                                                    name="./title">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <facebook
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Facebook"
                                                            value="facebookIcon"/>
                                                        <twitter
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Twitter"
                                                            value="twitterIcon"/>
                                                        <linkedin
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Linkedin"
                                                            value="linkedinIcon"/>
                                                        <instagram
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Instagram"
                                                            value="instagramIcon"/>
                                                        <pinterest
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Pinterest"
                                                            value="pinterestIcon"/>
                                                        <youtube
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Youtube"
                                                            value="youtubeIcon"/>
                                                    </items>
                                                </type>
                                                <url
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Provide link url"
                                                    fieldLabel="URL"
                                                    name="./linkPath"/>
                                                <openUrlInNewWindow
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                    name="./openUrlInNewWindow"
                                                    text="Open in new window"
                                                    value="yes"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </multi>
                        </items>
                    </column>
                </items>
            </general>
            <spacingControl
                jcr:primaryType="nt:unstructured"
                jcr:title="Spacing Control"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <spacingstylestop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Select top spacing for component"
                                fieldLabel="Top Spacing"
                                name="./spacingstylestop">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                        jcr:primaryType="nt:unstructured"
                                        text="Default"
                                        value="Default"/>
                                    <spacingtop-0px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Top-0px"
                                        value="spacingtop-zeropx"/>
                                    <spacingtop-10px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Top-10px"
                                        value="spacingtop-10px"/>
                                    <spacingtop-20px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Top-20px"
                                        value="spacingtop-20px"/>
                                </items>
                            </spacingstylestop>
                            <spacingstylesbottom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Select bottom spacing for component"
                                fieldLabel="Bottom Spacing"
                                name="./spacingstylesbottom">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                        jcr:primaryType="nt:unstructured"
                                        text="Default"
                                        value="Default"/>
                                    <spacingbottom-0px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Bottom-0px"
                                        value="spacingbottom-zeropx"/>
                                    <spacingbottom-10px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Bottom-10px"
                                        value="spacingbottom-10px"/>
                                    <spacingbottom-20px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Bottom-20px"
                                        value="spacingbottom-20px"/>
                                </items>
                            </spacingstylesbottom>
                        </items>
                    </column>
                </items>
            </spacingControl>
        </items>
    </content>
</jcr:root>

<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Widget"
    sling:resourceType="/libs/granite/ui/components/foundation/form/multifield"
    aem-composit-multifield=""
    class="full-width"
    eaem-nested=""
    fieldDescription="Click 'Add field' to add "
    fieldLabel="Add details of links"
    name="./multi">
    <field
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/form/fieldset"
        eaem-nested=""
        name="./multi">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resouceType="granite/ui/components/foundation/layouts/fixedcolumns"
            method="absolute"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <linkTitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Link label"
                        name="./title"
                        required="false"/>
                    <linkPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                        fieldLabel="Link url"
                        name="./linkPath"
                        required="false"/>
                    <openUrlInNewWindow
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                        name="./openUrlInNewWindow"
                        text="Open in new window"
                        value="yes"/>
                </items>
            </column>
        </items>
    </field>
</jcr:root>

<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Forgot Password"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="General"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <titlemap
                                cq:showOnCreate="{Boolean}false"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Titles"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Title"
                                fieldLabel="Title label"
                                name="./title"/>
                            <subTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Sub Title"
                                fieldLabel="Sub Title Label"
                                name="./subTitle"/>
                            <resetTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Reset Title"
                                fieldLabel="Reset Title Label"
                                name="./resetTitle"/>
                            <emailmap
                                cq:showOnCreate="{Boolean}false"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Email"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"/>
                            <email
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Email"
                                fieldLabel="Email label"
                                name="./email"/>
                            <reqEmail
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Provide Error message to be displayed if Email not entered"
                                fieldLabel="Required Error Message"
                                name="./reqEmail"/>
                            <secretquesmap
                                cq:showOnCreate="{Boolean}false"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Secret Question"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"/>
                            <secretQuestion
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Secret Question"
                                fieldLabel="Secret Question label"
                                name="./secretQuestion"/>
                            <question
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Question"
                                fieldLabel="Question Label"
                                name="./question"/>
                            <answer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Answer"
                                fieldLabel="Answer Label"
                                name="./answer"/>
                            <linksmap
                                cq:showOnCreate="{Boolean}false"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Links"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"/>
                            <buttonLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Submit Button"
                                fieldLabel="Submit Label"
                                name="./buttonLabel"/>
                            <redirectTo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Provide Path for Redirect page"
                                fieldLabel="Redirect Page Path"
                                name="./redirectTo"
                                required="true"/>
                            <dynamicerrormap
                                cq:showOnCreate="{Boolean}false"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Dynamic Errors"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"/>
                            <resetLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Reset Link"
                                fieldLabel="Reset LinkLabel"
                                name="./resetLink"/>
                            <resetMain
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Reset Main Alert"
                                fieldLabel="Reset Main Alert Label"
                                name="./resetMain"/>
                            <resetSub
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Reset Sub Alert"
                                fieldLabel="Reset Sub Alert Label"
                                name="./resetSub"/>
                            <secretQuesMain
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Label for Secret Question Main"
                                fieldLabel="Secret Question Main Label"
                                name="./secretQuesMain"/>
                        </items>
                    </column>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="nt:unstructured"
                jcr:title="Messages"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <invalidanswermap
                                cq:showOnCreate="{Boolean}false"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Invalid Answer"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"/>
                            <invalidAnswerTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Title for Invalid Answer"
                                fieldLabel="Invalid Answer Title"
                                name="./invalidAnswerTitle"/>
                            <invalidAnswerMsg
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Message for Invalid Answer"
                                fieldLabel="Invalid Answer Message"
                                name="./invalidAnswerMsg"/>
                            <associateemailmap
                                cq:showOnCreate="{Boolean}false"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Secret Question Email"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"/>
                            <associateEmailMsg
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Message for Associate Email Secret Question"
                                fieldLabel="Secret Question not added Email Message"
                                name="./associateEmailMsg"/>
                            <invalidemailmap
                                cq:showOnCreate="{Boolean}false"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Invalid Email"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"/>
                            <invalidEmailMsg
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Message for Invalid Email"
                                fieldLabel="Invalid Email Message"
                                name="./invalidEmailMsg"/>
                        </items>
                    </columns>
                </items>
            </tab2>
        </items>
    </content>
</jcr:root>

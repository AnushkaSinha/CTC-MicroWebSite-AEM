<div data-component-id="{{id}}" data-scf-component="social/forum/components/hbs/topic">
    <div class='topic-list-component'>
        <div class="topic-summary">
            <div class="topic-info clearfix">
				<div class="topic-avatar">
					<a href="{{author.profileUrl}}">
						<img src="{{author.largeAvatarUrl}}" alt="{{author.name}}" title="{{author.name}}"></a>
					</a>
				</div>
				<div class="topic-info-sub">
					<div class="topic-title">
						<h1><a href="{{friendlyUrl}}">{{subject}}</a></h1>
					</div>
					<div class='comment-author'>
						by <a href="{{author.profileUrl}}">{{author.name}}</a>
					</div>
					&nbsp;|&nbsp;
					<div class='comment-time'>
						{{pretty-time created}}
					</div>
				</div>
				<div class="replies">
					{{totalSize}}
				</div>
            </div>
			<div class="message">
			    {{#if attachments}}
                	<div class="attachment-content">
                        {{#each attachments}}
                        	{{#if this.image}}
                            	<img src="{{this.path}}" width=616 height=240>
                            {{/if}}
                        {{/each}}
                    </div>
                {{/if}}
				<!--<img class="topic-poster" src="http://placehold.it/616x240">-->
				{{{message}}}<a href="{{friendlyUrl}}" class='read-more'> read more</a>
			</div>
            <div class="topic-details">
            {{#if configuration.isTaggingAllowed}}
				{{#if tags}}
				<div class="tags">Tags:&nbsp;
                     {{#each tags}}
                         <span class="tag">{{title}}</span>
					 {{/each}}
                </div>
				{{/if}}
            {{/if}}
       	    </div>
        </div>
    </div>
</div>

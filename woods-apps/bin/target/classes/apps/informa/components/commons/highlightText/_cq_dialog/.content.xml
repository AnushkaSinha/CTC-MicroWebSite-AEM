<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="CTA - Link, Desc"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Text">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Text tab"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./title"/>
                            <text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldLabel="Text"
                                name="./text"/>
                            <externalUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./externalUrl"
                                text="External Url"
                                value="{Boolean}true"/>
                            <buttonText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter Button text in the field below. It is advisable to keep the name short"
                                fieldLabel="Button text"
                                name="./buttonText"/>
                            <buttonPath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Enter link to a page or file which should open when the button is clicked"
                                fieldLabel="Button path"
                                name="./buttonPath"/>
                            <openUrlInNewWindow
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./openUrlInNewWindow"
                                text="Open in new window"
                                value="{Boolean}true"/>
                        </items>
                    </columns>
                </items>
            </tab1>
            <general
                jcr:primaryType="nt:unstructured"
                jcr:title="Link tabs"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <links
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                aem-composit-multifield=""
                                class="full-width"
                                eaem-nested=""
                                fieldDescription="Click 'Add field' button to create a new link"
                                fieldLabel="Links"
                                name="./multi">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    eaem-nested=""
                                    name="./multi">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <linkTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Provide link text"
                                                    fieldLabel="Text"
                                                    name="./title"/>
                                                <linkPath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldDescription="Provide link url"
                                                    fieldLabel="URL"
                                                    name="./linkPath"/>
                                                <openUrlInNewWindow
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                    name="./openUrlInNewWindow"
                                                    text="Open in new window"
                                                    value="yes"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </links>
                        </items>
                    </column>
                </items>
            </general>
            <spacingControl
                jcr:primaryType="nt:unstructured"
                jcr:title="Spacing Control"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <spacingstylestop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Select top spacing for component"
                                fieldLabel="Top Spacing"
                                name="./spacingstylestop">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                        jcr:primaryType="nt:unstructured"
                                        text="Default"
                                        value="Default"/>
                                    <spacingtop-0px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Top-0px"
                                        value="spacingtop-zeropx"/>
                                    <spacingtop-10px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Top-10px"
                                        value="spacingtop-10px"/>
                                    <spacingtop-20px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Top-20px"
                                        value="spacingtop-20px"/>
                                </items>
                            </spacingstylestop>
                            <spacingstylesbottom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Select bottom spacing for component"
                                fieldLabel="Bottom Spacing"
                                name="./spacingstylesbottom">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                        jcr:primaryType="nt:unstructured"
                                        text="Default"
                                        value="Default"/>
                                    <spacingbottom-0px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Bottom-0px"
                                        value="spacingbottom-zeropx"/>
                                    <spacingbottom-10px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Bottom-10px"
                                        value="spacingbottom-10px"/>
                                    <spacingbottom-20px
                                        jcr:primaryType="nt:unstructured"
                                        text="Spacing Bottom-20px"
                                        value="spacingbottom-20px"/>
                                </items>
                            </spacingstylesbottom>
                        </items>
                    </column>
                </items>
            </spacingControl>
            <stylesTab/>
        </items>
    </content>
</jcr:root>

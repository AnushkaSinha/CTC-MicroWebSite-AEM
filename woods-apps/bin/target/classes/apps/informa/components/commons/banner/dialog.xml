<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Ad Banner Image"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <generalTab
                jcr:primaryType="cq:Widget"
                title="General"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <imagePath
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Image Path"
                        name="./imagePath"
                        rootPath="/content/dam"
                        width="300"
                        xtype="pathfield"/>
                    <imageLink
                        jcr:primaryType="cq:Widget"
                        allowBlank="true"
                        fieldLabel="Image Link"
                        name="./imageLink"
                        width="300"
                        xtype="pathfield"/>
                    <altText
                        jcr:primaryType="cq:Widget"
                        allowBlank="true"
                        fieldLabel="Alt Text"
                        name="./altText"
                        width="300"
                        xtype="textfield"/>
                </items>
            </generalTab>
        </items>
    </items>
</jcr:root>

<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    helpPath="en/cq/current/wcm/default_components.html#Search"
    title="Search"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <searchIn
            jcr:primaryType="cq:Widget"
            fieldLabel="Path to search in"
            name="./searchIn"
            xtype="pathfield"/>
        <searchButtonText
            jcr:primaryType="cq:Widget"
            fieldLabel="Search button text"
            name="./searchButtonText"
            xtype="textfield"/>
        <noResultsText
            jcr:primaryType="cq:Widget"
            fieldLabel="No results text"
            name="./noResultsText"
            xtype="textarea"/>
        <spellcheckText
            jcr:primaryType="cq:Widget"
            fieldLabel="Spellcheck text"
            name="./spellcheckText"
            xtype="textfield"/>
        <relatedSearchesText
            jcr:primaryType="cq:Widget"
            fieldLabel="Related searches text"
            name="./relatedSearchesText"
            xtype="textfield"/>
        <resultPagesText
            jcr:primaryType="cq:Widget"
            fieldLabel="Result pages label"
            name="./resultPagesText"
            xtype="textfield"/>
        <previousText
            jcr:primaryType="cq:Widget"
            fieldLabel="Previous label"
            name="./previousText"
            xtype="textfield"/>
        <nextText
            jcr:primaryType="cq:Widget"
            fieldLabel="Next label"
            name="./nextText"
            xtype="textfield"/>
    </items>
</jcr:root>
